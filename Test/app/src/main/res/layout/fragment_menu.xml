<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ergonator.test.MenuFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@android:drawable/ic_menu_revert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="3dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Menu"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <Button
                android:id="@+id/personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="-36sp"
                android:drawableTint="@color/colorPrimary"
                android:text="Personal Info" />

            <Button
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@android:drawable/ic_menu_preferences"
                android:drawablePadding="-36sp"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="Settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@android:drawable/ic_menu_help"
                android:drawablePadding="-36sp"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="help" />

            <Button
                android:id="@+id/project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="-36sp"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="Project Ergon" />/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

